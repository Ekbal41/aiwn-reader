<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Chapter Translation</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
    />
    <style>
      .chapter-content {
        white-space: pre-line;
      }
    </style>
  </head>
  <body class="d-flex flex-column min-vh-100" data-bs-theme="">
    <!-- Main Content -->
    <main class="container my-3 my-md-5 flex-grow-1">
      <div class="content-container">
        <div class="d-flex justify-content-between align-items-center">
          <h4 class="mb-0">
            ðŸ”—
            <a href="{{ url }}" target="_blank" class="text-primary"
              >CHAPTER SOURCE</a
            >
          </h4>
          <div class="d-grid gap-2">
            <a href="/" class="btn btn-secondary">
              <i class="bi bi-arrow-return-left"></i>
            </a>
          </div>
        </div>
        <div
          class="chapter-content mt-3 mt-md-4 p-3 border rounded"
          lang="en"
          role="document"
        >
          {{translated | trim}}
        </div>
        <div class="mt-md-4 mt-3 d-grid gap-2">
          <a href="/" class="btn btn-secondary"> BACK TO TRANSLATE</a>
        </div>
      </div>
    </main>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      {% if not storedChapter %}
        const url = "{{ url | escape }}";
        let translated = `{{ translated | replace('\\"', '"') | replace('\r\n', '\n') | replace('\r', '\n') }}`;
        if (url && translated) {
          const cleanTranslated = translated.replace(/&[^;]+;/g, "");
          const title = cleanTranslated
            .replace(/\s+/g, " ")
            .trim()
            .slice(0, 30);
          const chapter = {
            translated: cleanTranslated,
            title: title || "No Title",
            timestamp: new Date().toISOString()
          };
          localStorage.setItem(url, JSON.stringify(chapter));
        }
      {% endif %}
    </script>
  </body>
</html>
